<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <!-- tesproject_barang tree view -->
<record id="tesproject_barang_view_tree" model="ir.ui.view">
    <field name="name">Daftar Barang</field>
    <field name="model">tesproject.barang</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="harga_beli"/>
            <field name="harga_jual"/>
            <field name="stok"/>
            <field name="kelompokbarang_id"/>
            <field name="supplier_id" widget="many2many_tags"/>
        </tree>
    </field>
</record>

<!-- tesproject_barang form view -->
<record id="tesproject_barang_view_form" model="ir.ui.view">
    <field name="name">Form Barang</field>
    <field name="model">tesproject.barang</field>
    <field name="arch" type="xml">
        <form string="">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="harga_beli"/>
                    <field name="harga_jual"/>
                    <field name="stok"/>
                </group>
                <group name='kelompokbarang' string='Kelompok Barang'>
                    <field name="kelompokbarang_id"/>
                </group>
                <group name="supplier" string="Supplier">
                    <field name="supplier_id"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

    <!-- tesproject.barang action window -->
    <record id="tesproject_barang_action" model="ir.actions.act_window">
        <field name="name">Daftar Barang</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tesproject.barang</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="tesproject_barang_menu_act" 
              name="Daftar Barang" 
              parent="tesproject_barang_menu_categ" 
              action="tesproject_barang_action" 
              sequence="20"/>

</odoo>